{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sacho",
  "version": "0.1.0",
  "identifier": "com.sacho.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Sacho - The Songwriter's Notebook",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "decorations": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [],
    "resources": [
      "installers/dlls/*.dll"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "both",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "installerHooks": "./windows/hooks.nsi"
      }
    },
    "shortDescription": "Automatic recording companion for musicians",
    "longDescription": "Sacho automatically captures MIDI, audio, and video when you play, so you never lose a musical performance."
  },
  "plugins": {}
}
